# ============================================
# CẤU HÌNH PHÂN HỆ THU THẬP TIN TỨC TÀI CHÍNH
# ============================================

# --- Database ---
# PostgreSQL (production)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/tin_tuc_tai_chinh
# SQLite (development) - mặc định nếu không đặt DATABASE_URL
# DATABASE_URL=sqlite+aiosqlite:///./data/tin_tuc.db

# --- Vector Database (Qdrant) ---
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=tin_tuc_tai_chinh

# --- AI / NLP ---
# Google Gemini API key (miễn phí tại https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Model embedding (sentence-transformers)
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# --- Thu thập dữ liệu ---
CRAWL_INTERVAL_MINUTES=15
REQUEST_TIMEOUT=30
MAX_RETRIES=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# --- Logging ---
LOG_LEVEL=INFO
